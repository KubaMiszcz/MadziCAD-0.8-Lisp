zmiana_tekstu_wymiarowego : dialog {
    label = "Zmiana tekstu wymiarowego";
    initial_focus = "nowy_tekst_wymiarowy";
	: column {
		: text { label = "Wpisz nowy tekst wymiarowy:"; }
		: edit_box { key = "nowy_tekst_wymiarowy";  allow_accept = true; }
		spacer_1;
	: row { fixed_width = true; alignment = centered;
		:button {label = "Zmieñ"; key = "accept"; is_default = true;}
		:button {label = "Anuluj"; key = "cancel";  is_cancel = true;}
	}
	}
}